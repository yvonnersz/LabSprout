<div class="form">

    <%= form_for(@store) do |f| %>

        <%= f.text_field :name, placeholder: "Please enter in a shop name.", required: true %><br><br>
        <%= f.text_field :bio, placeholder: "Please enter a bio for your shop.", required: true %><br><br>

        <%= f.submit "Submit" %>

    <% end %>

</div>