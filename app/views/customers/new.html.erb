<h1>Sign Up</h1>

<%= form_for(@customer, url:'/signup') do |f| %>

    <%= f.label :email %>
    <%= f.email_field :email %>
    <br><br>

    <%= f.label :password %>
    <%= f.password_field :password %>
    <br><br>

    <%= f.label :name %>
    <%= f.text_field :name %>
    <br><br>

    <%= f.label :cash %>
    <%= f.text_field :cash %>
    
    <%= f.submit "Submit" %>

<% end %>