<h2>Sign Up</h2>

<div class="form">
<%= form_for(@customer, url:'/signup') do |f| %>

    <%= f.email_field :email, placeholder: "Email" %>
    <br><br>

    <%= f.password_field :password, placeholder: "Password" %>
    <br><br>

    <%= f.text_field :name, placeholder: "First Name" %>
    <br><br>

    <%= f.text_field :cash, placeholder: "Cash" %>
    <br><br>
    
    <%= f.submit "Submit" %>

<% end %>
</div>