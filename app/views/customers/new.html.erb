<div class="error">
    <% if @customer.errors.any? %>
        <% @customer.errors.full_messages.each do |message| %>
            <%= message %>.<br>
        <% end %><br>
    <% end %>
</div>


<div class="form">
<%= form_for(@customer, url:'/signup') do |f| %>

    <%= f.email_field :email, placeholder: "Please enter an email." %>
    <br><br>

    <%= f.password_field :password, placeholder: "Please enter in a password." %>
    <br><br>

    <%= f.text_field :name, placeholder: "What would you like to be called?" %>
    <br><br>

    <%= f.number_field :cash, placeholder: "How much cash do you have?" %>
    <br><br>
    
    <%= f.submit "Submit" %>

<% end %>
</div>

<div class="special">
<%= link_to('Facebook SignUp', '/auth/facebook') %>
</div>
